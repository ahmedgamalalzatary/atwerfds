<div class="gift-guide-section" data-section-id="{{ section.id }}">
  {%- comment -%} Top header bar - fixed to section {%- endcomment -%}
  <div class="gift-guide-header">
    <div class="gift-guide-header-content">
      <button
        class="gift-guide-hamburger mobile-only"
        aria-label="Menu"
        onclick="this.closest('.gift-guide-header').querySelector('.gift-guide-mobile-menu').classList.toggle('is-open'); this.classList.toggle('is-active');"
      >
        <span></span>
        <span></span>
        <span></span>
      </button>
      <div class="gift-guide-logo">
        {{ section.settings.logo_text }}
      </div>

      <div class="gift-guide-tagline desktop-only">
        {{ section.settings.tagline }}
      </div>

      {%- if section.settings.button1_text != blank -%}
        <a
          href="{{ section.settings.button1_link | default: '#' }}"
          class="gift-guide-btn gift-guide-btn-yellow desktop-only"
        >
          <span class="btn-text">{{ section.settings.button1_text }}</span>
          <span class="arrow arrow-left">{{ section.settings.button_arrow }}</span>
          <span class="arrow arrow-right">{{ section.settings.button_arrow }}</span>
        </a>
      {%- endif -%}
    </div>

    <div class="gift-guide-mobile-menu">
      <div class="gift-guide-mobile-menu-content">
        <div class="gift-guide-tagline mobile-menu-item">
          {{ section.settings.tagline }}
        </div>
        {%- if section.settings.button1_text != blank -%}
          <a
            href="{{ section.settings.button1_link | default: '#' }}"
            class="gift-guide-btn gift-guide-btn-yellow mobile-menu-item"
          >
            <span class="btn-text">{{ section.settings.button1_text }}</span>
            <span class="arrow arrow-left">{{ section.settings.button_arrow }}</span>
            <span class="arrow arrow-right">{{ section.settings.button_arrow }}</span>
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
  <div class="hero-section container">
    <div class="up-section">
      <div class="gift-guide-image-wrapper">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', class: 'gift-guide-img' }}
        {%- else -%}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'guide-img-1' }}
        {%- endif -%}
      </div>
    </div>
    <div class="bottom-section">
      <div class="gift-guide-content">
        {%- if section.settings.heading != blank -%}
          <h1 class="gift-guide-heading">{{ section.settings.heading }}</h1>
        {%- endif -%}
        {%- if section.settings.description_intro != blank or section.settings.description_extra != blank -%}
          <div class="gift-guide-description">
            {{ section.settings.description_intro }}

            {%- if section.settings.description_extra != blank -%}
              <div class="desktop-only-content">
                {{ section.settings.description_extra }}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
        {%- if section.settings.button2_text != blank -%}
          <a href="{{ section.settings.button2_link | default: '#' }}" class="gift-guide-btn gift-guide-btn-black">
            <span class="btn-text">{{ section.settings.button2_text }}</span>
            <span class="arrow arrow-left">{{ section.settings.button_arrow }}</span>
            <span class="arrow arrow-right">{{ section.settings.button_arrow }}</span>
          </a>
        {%- endif -%}
      </div>
      <div class="gift-guide-image-wrapper">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', class: 'gift-guide-img' }}
        {%- else -%}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'guide-img-2' }}
        {%- endif -%}
      </div>
    </div>
  </div>

  {%- comment -%} Footer sustainability message {%- endcomment -%}
  {%- if section.settings.footer_text != blank -%}
    <div class="gift-guide-footer">
      {{ section.settings.footer_text }}
    </div>
  {%- endif -%}
</div>

<style>
        /* ============================================
           GIFT GUIDE BANNER - STYLES
           Using inline styles to keep section self-contained
           and allow Liquid variable usage
           ============================================ */

        .gift-guide-section {
          font-family: 'Jost', sans-serif;
          overflow: hidden;
          margin: 0 auto;
          max-width: 1440px;
        }

        /* ============================================
           HEADER BAR (Top section)
           ============================================ */
        .gift-guide-header {
          background: #f5f5f5;
          padding: 1rem 0;
          position: absolute;
          width: 100%;
          z-index: 10;
          margin: 0 auto;
          max-width: 1440px;
        }

        .gift-guide-header-content {
          max-width: 90%;
          margin: 0 auto;
          display: flex;
          align-items: center;
          justify-content: space-between;
        }

        .gift-guide-logo {
          font-size: 1.25rem;
          font-weight: 700;
          text-transform: uppercase;
          letter-spacing: 2px;
        }

        .gift-guide-tagline {
          font-size: 1rem;
          font-weight: 400;
          flex: 1;
          text-align: center;
        }

        /* ============================================
           BUTTONS - with left-to-right animation
           WHY: Creates engaging interaction without being distracting
           ============================================ */
        .gift-guide-btn {
          position: relative;
          display: inline-flex;
          align-items: center;
          gap: 0.625rem;
          padding: 0.75rem 1.125rem 0.75rem 2.625rem;
          font-size: 1rem;
          font-weight: 400;
          text-decoration: none;
          border: none;
          overflow: hidden;
          transition: color 0.4s ease;
          z-index: 1;
        }

        /* Pseudo-element for color fill animation */
        .gift-guide-btn::before {
          content: '';
          position: absolute;
          left: -100%;
          top: 0;
          width: 100%;
          height: 100%;
          transition: left 0.4s ease;
          z-index: -1;
        }

        .gift-guide-btn:hover::before {
          left: 0;
        }

        /* Yellow button (CHOOSE GIFT) */
        .gift-guide-btn-yellow {
          background: #fff544;
          color: #000000;
        }

        .gift-guide-btn-yellow::before {
          background: #000000;
        }

        .gift-guide-btn-yellow:hover {
          color: #ffffff;
        }

        /* Black button (SHOP NOW) */
        .gift-guide-btn-black {
          background: #000000;
          color: #ffffff;
        }

        .gift-guide-btn-black::before {
          background: #fff544;
        }

        .gift-guide-btn-black:hover {
          color: #000000;
        }

        /* Arrow animation - swap left to right */
        .gift-guide-btn .arrow {
          transition: opacity 0.2s ease;
        }

        .gift-guide-btn .arrow-left {
          opacity: 1;
        }

        .gift-guide-btn .arrow-right {
          opacity: 0;
          position: absolute;
          right: 1.125rem;
        }

        .gift-guide-btn:hover .arrow-left {
          opacity: 0;
        }

        .gift-guide-btn:hover .arrow-right {
          opacity: 1;
          transition-delay: 0.2s;
        }

        /* ============================================
           HERO CONTENT AREA
           ============================================ */

        .hero-section.container {
          position: relative;
          width: 90%;
          margin: 0 auto;
        }
        .gift-guide-img,
        .guide-img-1,
        .guide-img-2 {
          width: 100%;
          height: auto;
          display: block;
          object-fit: cover;
          z-index: 1;
        }
      .up-section {
        width: 100%
          position: relative;
      }


      .up-section .guide-img-1 {
        width: 100%;
        object-fit: cover;
      }
        .bottom-section {
          display: flex;
          align-items: center;
          justify-content: space-between;
          padding: 0 2rem;
          gap: 4rem;
        }

        .bottom-section .gift-guide-content {
          flex: 0.8;
        }
        .bottom-section .gift-guide-heading {
          font-size: 4.375rem;
          color: #000000;
          font-weight: 500;
          margin: 2.5rem 0;
        }
        .bottom-section .gift-guide-description {
          font-size: 1.25rem;
          font-weight: 400;
          margin: 0 0 2.5rem 0;
        }
        .bottom-section .gift-guide-description p {
            margin-bottom: 0;
          }
          .bottom-section .gift-guide-btn {
          margin-bottom: 1.5rem;
        }

        .bottom-section .gift-guide-image-wrapper {
          flex: 1;
          transform: scale(1.8);
          transform-origin: left center;
        }
        /* ============================================
          FOOTER BAR (Bottom sustainability message)
           ============================================ */
        .gift-guide-footer {
          background: #f5f5f5;
          text-align: center;
          padding: 0.625rem 0;
          font-size: 1rem;
          font-weight: 400;
          z-index: 10;
          position: relative;
        }

        /* ============================================
           MOBILE MENU & HAMBURGER
           ============================================ */
        .gift-guide-hamburger {
          display: none;
          background: none;
          border: none;
          cursor: pointer;
          padding: 0;
          width: 30px;
          height: 20px;
          position: relative;
          z-index: 20;
        }

        .gift-guide-hamburger span {
          display: block;
          width: 100%;
          height: 2px;
          background-color: #000;
          position: absolute;
          left: 0;
          transition: all 0.3s ease;
        }

        .gift-guide-hamburger span:nth-child(1) { top: 0; }
        .gift-guide-hamburger span:nth-child(2) { top: 50%; transform: translateY(-50%); }
        .gift-guide-hamburger span:nth-child(3) { bottom: 0; }

        .gift-guide-hamburger.is-active span:nth-child(1) { top: 50%; transform: translateY(-50%) rotate(45deg); }
        .gift-guide-hamburger.is-active span:nth-child(2) { opacity: 0; }
        .gift-guide-hamburger.is-active span:nth-child(3) { bottom: 50%; transform: translateY(50%) rotate(-45deg); }

        .gift-guide-mobile-menu {
          display: none;
          position: absolute;
          top: 100%;
          left: 0;
          width: 100%;
          background: #f5f5f5;
          padding: 0 1rem 2rem 1rem;
          z-index: 9;
          box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .gift-guide-mobile-menu.is-open {
          display: block;
          animation: slideDown 0.3s ease-out;
        }

        @keyframes slideDown {
          from { opacity: 0; transform: translateY(-10px); }
          to { opacity: 1; transform: translateY(0); }
        }

        .gift-guide-mobile-menu-content {
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 1.5rem;
        }

        .mobile-menu-item {
          width: 100%;
          text-align: center;
          justify-content: center;
        }

    /* ============================================
          tablet RESPONSIVE
          WHY: Ensure good readability and layout on medium-sized screens
           ============================================ */
        @media screen and (max-width: 1200px) {
          .bottom-section .gift-guide-heading {
            font-size: 2.75rem;
            margin: 1.25rem 0;
          }
          .bottom-section .gift-guide-description {
            font-size: 1rem;
            margin: 0 0 1.5rem 0;
          }
          .bottom-section  {
            gap: 2rem;
          }
          .bottom-section .gift-guide-image-wrapper {
            transform-origin: left center;
        }
        /* ============================================
          MOBILE RESPONSIVE
          WHY: Mobile-first ensures good performance on all devices
           ============================================ */
        @media screen and (max-width: 780px) {
          .gift-guide-header{
            position: relative;
            margin-bottom: 10rem;
          }
          .gift-guide-header-content {
            flex-direction: row;
            gap: 0;
            justify-content: center;
          }

          .desktop-only {
            display: none !important;
          }

          .mobile-only {
            display: block !important;
            position: absolute;
            left: 1rem;

          }

          .gift-guide-btn {
            justify-content: center;
            padding: 1rem 1rem 1rem 2rem;
            width: 70%;
          }

          /* Split Mobile */
          .bottom-section {
            flex-direction: column;
            min-height: auto;
            position:absolute;
            top:5rem;
          }
          .bottom-section .gift-guide-heading{
          font-size: 2rem;
          }
          .bottom-section .gift-guide-content {
            max-width: 100%;
            text-align: center;
            order: 2;
            margin: 0 auto;
          }
          .gift-guide-description .desktop-only-content{
            display: none;
          }

          .bottom-section .gift-guide-image-wrapper {
            height: 18.75rem;
            width: 100%;
            order: 1;
            display: none;
          }

          .bottom-section .gift-guide-description {
            font-size: 1rem;
          }
          .gift-guide-footer {
            font-size: 0.6875rem;
            padding: 0.75rem 1rem;
          }
        }
        }
</style>

