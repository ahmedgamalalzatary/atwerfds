{% comment %}
  GIFT GUIDE BANNER SECTION

  Purpose: Hero banner with editable text, animated buttons, and lifestyle background
  Features:
  - All text editable via customizer (logo, tagline, heading, description, buttons)
  - Button animations: Left-to-right color fill with arrow swap
  - Shopify placeholder background (lifestyle-1)
  - Fixed header that disappears on scroll
  - Mobile responsive layout

  Author: Candidate Assignment
  Date: 2026-01-03
{% endcomment %}

<div class="gift-guide-section" data-section-id="{{ section.id }}">
  {%- comment -%} Top header bar - fixed to section {%- endcomment -%}
  <div class="gift-guide-header">
    <div class="gift-guide-header-content">
      
      {%- comment -%} Mobile Menu Toggle {%- endcomment -%}
      <input type="checkbox" id="gift-guide-menu-toggle-{{ section.id }}" class="gift-guide-menu-toggle" hidden>
      <label for="gift-guide-menu-toggle-{{ section.id }}" class="gift-guide-menu-icon">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </label>

      <div class="gift-guide-logo">
        {{ section.settings.logo_text }}
      </div>

      <div class="gift-guide-nav">
        <div class="gift-guide-tagline">
          {{ section.settings.tagline }}
        </div>

        {%- if section.settings.button1_text != blank -%}
          <a href="{{ section.settings.button1_link | default: '#' }}" class="gift-guide-btn gift-guide-btn-yellow">
            <span class="btn-text">{{ section.settings.button1_text }}</span>
            <span class="arrow arrow-left">{{ section.settings.button_arrow }}</span>
            <span class="arrow arrow-right">{{ section.settings.button_arrow }}</span>
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
  <div class="hero-section container">
    <div class="up-section">
      <div class="gift-guide-image-wrapper">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', class: 'gift-guide-img' }}
        {%- else -%}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'guide-img-1' }}
        {%- endif -%}
      </div>
    </div>
    <div class="bottom-section">
      <div class="gift-guide-content">
        {%- if section.settings.heading != blank -%}
          <h1 class="gift-guide-heading">{{ section.settings.heading }}</h1>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <div class="gift-guide-description">{{ section.settings.description }}</div>
        {%- endif -%}
        {%- if section.settings.button2_text != blank -%}
          <a href="{{ section.settings.button2_link | default: '#' }}" class="gift-guide-btn gift-guide-btn-black">
            <span class="btn-text">{{ section.settings.button2_text }}</span>
            <span class="arrow arrow-left">{{ section.settings.button_arrow }}</span>
            <span class="arrow arrow-right">{{ section.settings.button_arrow }}</span>
          </a>
        {%- endif -%}
      </div>
      <div class="gift-guide-image-wrapper">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', class: 'gift-guide-img' }}
        {%- else -%}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'guide-img-2' }}
        {%- endif -%}
      </div>
    </div>
  </div>

  {%- comment -%} Footer sustainability message {%- endcomment -%}
  {%- if section.settings.footer_text != blank -%}
    <div class="gift-guide-footer">
      {{ section.settings.footer_text }}
    </div>
  {%- endif -%}
</div>

<style>
  /* ============================================
     GIFT GUIDE BANNER - STYLES
     Using inline styles to keep section self-contained
     and allow Liquid variable usage
     ============================================ */

  .gift-guide-section {
    font-family: 'Jost', sans-serif;
    overflow: hidden;
    margin: 0 auto;
    max-width: 90rem;
  }

  /* ============================================
     HEADER BAR (Top section)
     ============================================ */
  .gift-guide-header {
    background: #f5f5f5;
    padding: 1rem 0;
    position: absolute;
    width: 100%;
    z-index: 100; /* Increased Z-index for menu overlay */
    margin: 0 auto;
    max-width: 90rem;
  }

  .gift-guide-header-content {
    max-width: 90%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  .gift-guide-logo {
    font-size: 1.25rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.0625rem;
    z-index: 102;
  }

  .gift-guide-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex: 1;
    justify-content: flex-end;
  }

  .gift-guide-tagline {
    font-size: 1rem;
    font-weight: 400;
    text-align: center;
  }

  /* Mobile Menu Icon (Hidden on Desktop) */
  .gift-guide-menu-icon {
    display: none;
    cursor: pointer;
    flex-direction: column;
    justify-content: space-between;
    width: 1.5rem;
    height: 1.125rem;
    z-index: 102;
  }

  .gift-guide-menu-icon .icon-bar {
    display: block;
    width: 100%;
    height: 0.125rem;
    background-color: #000;
    transition: 0.3s;
  }

  /* ============================================
     BUTTONS - with left-to-right animation
     WHY: Creates engaging interaction without being distracting
     ============================================ */
  .gift-guide-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.75rem 1.125rem 0.75rem 2.625rem;
    font-size: 1rem;
    font-weight: 400;
    text-decoration: none;
    border: none;
    overflow: hidden;
    transition: color 0.4s ease;
    z-index: 1;
    white-space: nowrap;
  }

  /* Pseudo-element for color fill animation */
  .gift-guide-btn::before {
    content: '';
    position: absolute;
    left: -100%;
    top: 0;
    width: 100%;
    height: 100%;
    transition: left 0.4s ease;
    z-index: -1;
  }

  .gift-guide-btn:hover::before {
    left: 0;
  }

  /* Yellow button (CHOOSE GIFT) */
  .gift-guide-btn-yellow {
    background: #fff544;
    color: #000000;
  }

  .gift-guide-btn-yellow::before {
    background: #000000;
  }

  .gift-guide-btn-yellow:hover {
    color: #ffffff;
  }

  /* Black button (SHOP NOW) */
  .gift-guide-btn-black {
    background: #000000;
    color: #ffffff;
  }

  .gift-guide-btn-black::before {
    background: #fff544;
  }

  .gift-guide-btn-black:hover {
    color: #000000;
  }

  /* Arrow animation - swap left to right */
  .gift-guide-btn .arrow {
    transition: opacity 0.2s ease;
  }

  .gift-guide-btn .arrow-left {
    opacity: 1;
  }

  .gift-guide-btn .arrow-right {
    opacity: 0;
    position: absolute;
    right: 1.125rem;
  }

  .gift-guide-btn:hover .arrow-left {
    opacity: 0;
  }

  .gift-guide-btn:hover .arrow-right {
    opacity: 1;
    transition-delay: 0.2s;
  }

  /* ============================================
     HERO CONTENT AREA
     ============================================ */

  .hero-section.container {
    position: relative;
    width: 90%;
    margin: 0 auto;
  }
  .gift-guide-img,
  .guide-img-1,
  .guide-img-2 {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    z-index: 1;
  }
  .up-section {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .up-section .guide-img-1 {
    width: 100%;
    object-fit: cover;
    display: block;
  }
  .bottom-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 2rem;
    gap: 4rem;
    position: relative;
  }

  .bottom-section .gift-guide-content {
    flex: 0 1 45%;
    max-width: 37.5rem;
    z-index: 2;
  }

  .bottom-section .gift-guide-heading {
    font-size: 4.375rem;
    color: #000000;
    font-weight: 500;
    margin: 0 0 2rem 0;
    line-height: 1.1;
  }

  .bottom-section .gift-guide-description {
    font-size: 1.25rem;
    font-weight: 400;
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }

  .bottom-section .gift-guide-image-wrapper {
    flex: 0 1 55%;
    max-width: 43.75rem;
    position: relative;
  }

  .bottom-section .gift-guide-image-wrapper img {
    width: 100%;
    height: auto;
    max-height: 37.5rem;
    object-fit: cover;
  }
  /* ============================================
    FOOTER BAR (Bottom sustainability message)
     ============================================ */
  .gift-guide-footer {
    background: #f5f5f5;
    text-align: center;
    padding: 0.625rem 0;
    font-size: 1rem;
    font-weight: 400;
    letter-spacing: 0rem;
    z-index: 10;
    position: relative;
  }

  /* ============================================
    MOBILE RESPONSIVE
    WHY: Optimized for all screen sizes
     ============================================ */
  
  /* Mobile: ≤749px */
  @media screen and (max-width: 46.8125rem) {
    .gift-guide-header {
      position: relative;
      padding: 1rem 0;
    }

    .gift-guide-header-content {
      /* flex-direction: column; -- REMOVED */
      flex-direction: row;
      justify-content: flex-start; /* Align Hamburger left */
      gap: 0;
      max-width: 100%;
      padding: 0 1rem;
    }

    .gift-guide-menu-icon {
      display: flex;
      margin-right: 1.25rem; /* Space between burger and logo */
    }

    .gift-guide-logo {
      font-size: 1rem;
      flex-grow: 1; /* Center Logo */
      text-align: center;
      padding-right: 2.75rem; /* Balance hamburger width + margin to center perfectly */
    }

    /* Mobile Menu Drawer */
    .gift-guide-nav {
      position: absolute;
      top: 100%;
      left: 0;
      width: 100%;
      flex-direction: column;
      background: #f5f5f5;
      padding: 1.25rem;
      gap: 1.25rem;
      border-top: 0.0625rem solid #e0e0e0;
      transform: translateY(-1.25rem);
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
      z-index: 100;
      box-shadow: 0 0.625rem 0.625rem rgba(0,0,0,0.05);
    }

    /* Open Menu State */
    .gift-guide-menu-toggle:checked ~ .gift-guide-nav {
      transform: translateY(0);
      opacity: 1;
      visibility: visible;
    }

    /* Hamburger Animation to X */
    .gift-guide-menu-toggle:checked ~ .gift-guide-menu-icon .icon-bar:nth-child(1) {
      transform: rotate(45deg) translate(0.3125rem, 0.3125rem);
    }
    .gift-guide-menu-toggle:checked ~ .gift-guide-menu-icon .icon-bar:nth-child(2) {
      opacity: 0;
    }
    .gift-guide-menu-toggle:checked ~ .gift-guide-menu-icon .icon-bar:nth-child(3) {
      transform: rotate(-45deg) translate(0.3125rem, -0.3125rem);
    }

    .gift-guide-tagline {
      display: block; /* Show tagline in drawer */
      margin-bottom: 0.625rem;
    }

    .gift-guide-btn {
      width: 100%;
      justify-content: center;
      padding: 0.875rem 1.5rem;
      font-size: 0.9rem;
    }

    .hero-section.container {
      width: 100%;
      padding: 0;
    }

    /* Hide Top Image Section on Mobile */
    .up-section {
      display: none;
    }

    .bottom-section {
      display: block; /* Simpler than flex for basic stacking */
      padding: 0;
      width: 100%;
    }

    .bottom-section .gift-guide-content {
      width: 100%;
      padding: 2.5rem 1.25rem;
      text-align: center;
      box-sizing: border-box;
    }

    .bottom-section .gift-guide-heading {
      font-size: 2.25rem;
      margin-bottom: 1.5rem;
    }

    .bottom-section .gift-guide-description {
      font-size: 1rem;
      line-height: 1.5;
    }

    .bottom-section .gift-guide-image-wrapper {
      width: 100%;
    }

    .bottom-section .gift-guide-image-wrapper img {
      width: 100%;
      height: 18.75rem;
      object-fit: cover;
      display: block;
    }

    .gift-guide-footer {
      font-size: 0.625rem;
      padding: 0.75rem 1rem;
      letter-spacing: 0.03125rem;
    }
  }

  /* Tablet: 750px - 989px */
  @media screen and (min-width: 46.875rem) and (max-width: 61.8125rem) {
    .gift-guide-header-content {
      max-width: 95%;
      padding: 0 1.25rem;
    }

    .gift-guide-logo {
      font-size: 1.1rem;
    }

    .gift-guide-tagline {
      font-size: 0.9rem;
    }

    .hero-section.container {
      width: 95%;
    }

    .bottom-section {
      padding: 2rem 0.625rem;
      gap: 2rem;
    }

    .bottom-section .gift-guide-content {
      flex: 0 1 50%;
    }

    .bottom-section .gift-guide-heading {
      font-size: 3rem;
      margin-bottom: 1.5rem;
    }

    .bottom-section .gift-guide-description {
      font-size: 1.125rem;
    }

    .bottom-section .gift-guide-image-wrapper {
      flex: 0 1 50%;
      max-width: 31.25rem;
    }

    .bottom-section .gift-guide-image-wrapper img {
      max-height: 31.25rem;
    }

    .gift-guide-footer {
      font-size: 0.9rem;
    }
  }

  /* Desktop: 990px - 1439px */
  @media screen and (min-width: 61.875rem) and (max-width: 89.9375rem) {
    .bottom-section .gift-guide-heading {
      font-size: 3.75rem;
    }

    .bottom-section .gift-guide-description {
      font-size: 1.1875rem;
    }

    .bottom-section .gift-guide-image-wrapper {
      max-width: 37.5rem;
    }
  }

  /* Large Desktop: ≥1440px */
  @media screen and (min-width: 90rem) {
    .gift-guide-header-content {
      max-width: 81.25rem;
    }

    .hero-section.container {
      width: 81.25rem;
    }

    .bottom-section {
      padding: 3rem 2rem;
    }

    .bottom-section .gift-guide-heading {
      font-size: 4.375rem;
    }
  }
</style>

